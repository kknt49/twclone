<div class = "field">

<%= form_with(model: @murmur, local: true, url: choose_new_or_edit) do |form| %>
  <% if @murmur.errors.any? %>
    <div id="error_explanation">
      <h2><%= @murmur.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @murmur.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="murmur_content">
    <%= form.label :つぶやき本文 %><br>
    <%= form.text_area :content %>
  </div>
  <%= form.submit "投稿" %>
<% end %>
</div>